{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", // Đường dẫn cơ sở là thư mục gốc
    "paths": {
      "~/*": ["src/*"], // Alias cho src
      "services/*": ["services/*"], // Alias cho services
      "repository/*": ["repository/*"], // Alias cho repository
      "interfaces/*": ["interfaces/*"] // Alias cho interfaces
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*", "services/**/*", "repository/**/*", "interfaces/**/*"] // Bao gồm các thư mục mới
}
